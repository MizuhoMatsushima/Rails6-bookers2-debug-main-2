<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-3 col-md-3'>
      <%= render "layouts/errors", obj: @book_new %>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-9 col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= link_to '新しい順', books_path(latest: "true") %>|<%= link_to '評価の高い順', books_path(rating: "true") %>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>