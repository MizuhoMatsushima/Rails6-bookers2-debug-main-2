<% book.post_comments.each do |post_comment| %>
  <div>
    <%= link_to user_path(post_comment.user) do %>
      <%= image_tag post_comment.user.get_profile_image, size: '50x50' %><br>
      <%= post_comment.user.name %>
    <% end %>
    <%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
    <% end %>
  </div>
<% end %>
<div>
  <%= form_with model: [book, post_comment], local: false do |f| %>
    <%= f.text_area :comment, rows: '5', cols: '70' %>
    <%= f.submit "送信" %>
  <% end %>
</div>